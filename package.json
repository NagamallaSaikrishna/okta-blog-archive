{
  "private": true,
  "workspaces": [
    "packages/@okta/*"
  ],
  "scripts": {
    "dev": "yarn workspace @okta/vuepress-site dev",
    "build": "yarn workspace @okta/vuepress-site build",
    "migrate": "yarn workspace @okta/migrate-from-jekyll migrate",
    "pretest": "yarn dev & wait-on http://localhost:8080 && ./node_modules/protractor/bin/webdriver-manager update --gecko false",
    "test": "yarn test-only || (yarn stop && exit 1)",
    "posttest": "yarn stop",
    "stop": "if-env CI=true && exit 0 || (pkill -SIGINT -f 'okta_github_io|webdriver-manager/selenium')",
    "test-only": "protractor tests/selenium/conf.js"
  },
  "repository": "git@github.com:okta/okta.github.io",
  "author": "Brian Retterer <brian.retterer@okta.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai-as-promised": "*",
    "chai": "^4.2.0",
    "chalk": "^1.1.3",
    "cross-env": "^5.2.0",
    "if-env": "^1.0.4",
    "mocha": "^5.2.0",
    "protractor": "^5.4.2",
    "recursive-readdir": "^2.2.2",
    "remove": "^0.1.5",
    "wait-on": "^2.1.2"
  }
}
